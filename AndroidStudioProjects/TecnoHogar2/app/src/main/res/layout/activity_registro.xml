<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#FFFFFF"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Registro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="-16dp"
            android:padding="16dp"
            tools:context=".MainActivity"
            android:onClick="hideKeyboard">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ellipse" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="87dp"
                android:fontFamily="@font/poppins_semibold"
                android:lines="1"
                android:text="Bienvenido a"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ct_correoregistro"
                android:layout_width="340dp"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bordes_redondos"
                android:backgroundTint="#F6F6F9"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#A0A0A1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ct_usuarioregistro"
                app:layout_constraintStart_toStartOf="@+id/ct_usuarioregistro"
                app:layout_constraintTop_toBottomOf="@+id/ct_usuarioregistro" />

            <EditText
                android:id="@+id/ct_nombre"
                android:layout_width="340dp"
                android:layout_height="61dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/bordes_redondos"
                android:backgroundTint="#F6F6F9"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#A0A0A1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/ct_usuarioregistro"
                android:layout_width="340dp"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bordes_redondos"
                android:backgroundTint="#F6F6F9"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Nombre de Usuario"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#A0A0A1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ct_nombre"
                app:layout_constraintStart_toStartOf="@+id/ct_nombre"
                app:layout_constraintTop_toBottomOf="@+id/ct_nombre" />

            <EditText
                android:id="@+id/ct_numtel"
                android:layout_width="340dp"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bordes_redondos"
                android:backgroundTint="#F6F6F9"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Numero de Telefono"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#A0A0A1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ct_correoregistro"
                app:layout_constraintStart_toStartOf="@+id/ct_correoregistro"
                app:layout_constraintTop_toBottomOf="@+id/ct_correoregistro" />

            <EditText
                android:id="@+id/ct_password"
                android:layout_width="340dp"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bordes_redondos"
                android:backgroundTint="#F6F6F9"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#A0A0A1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ct_numtel"
                app:layout_constraintStart_toStartOf="@+id/ct_numtel"
                app:layout_constraintTop_toBottomOf="@+id/ct_numtel" />

            <Button
                android:id="@+id/btn_registrarse"
                android:layout_width="318dp"
                android:layout_height="61dp"
                android:layout_marginTop="58dp"
                android:background="@drawable/skyblue_rectangle"
                android:backgroundTint="#0EB0C5"
                android:fontFamily="@font/poppins_bold"
                android:text="Registrarse"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:cornerRadius="11dp"
                app:layout_constraintEnd_toEndOf="@+id/ct_password"
                app:layout_constraintStart_toStartOf="@+id/ct_password"
                app:layout_constraintTop_toBottomOf="@+id/ct_password" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Ya tienes una cuenta?"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/btn_registrarse"
                app:layout_constraintTop_toBottomOf="@+id/btn_registrarse" />

            <TextView
                android:id="@+id/ct_iniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/montserrat"
                android:text="Iniciar sesión"
                android:textColor="#0645AD"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_registrarse"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="TecnoHogar"
                android:textColor="@color/skyblue"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>